{
  "name": "mfos-app-template",
  "version": "1.0.0",
  "type": "module",
  "description": "Official MFOS application template",
  "author": "EasyProTech LLC",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:assets",
    "build:assets": "cp manifest.json dist/ && cp public/icon.svg dist/ && cp -r locales dist/",
    "preview": "vite preview",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
